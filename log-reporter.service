[Unit]
Description=SatPi Log Reporter Service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /home/johnc/satpi/log-reporter.py daemon 300
Restart=always
RestartSec=60
User=johnc
Group=johnc
StandardOutput=journal
StandardError=journal
WorkingDirectory=/home/johnc/satpi

# Environment
Environment=PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
Environment=HOME=/home/johnc

[Install]
WantedBy=multi-user.target