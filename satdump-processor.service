[Unit]
Description=SatDump GOES Processing Service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/home/johnc/satpi/process-and-upload.sh
Restart=always
RestartSec=60
User=johnc
Group=johnc
StandardOutput=journal
StandardError=journal
WorkingDirectory=/home/johnc/satpi

# Environment
Environment=PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
Environment=HOME=/home/johnc

[Install]
WantedBy=multi-user.target